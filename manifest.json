{

  "browser_specific_settings": {
      "gecko": {
          "data_collection_permissions": {
            "required": [
              "authenticationInfo",
              "websiteContent"
            ]
          },
          "id": "miniflux-checker-plus@addons.mozilla.org"
      }
  },
  "manifest_version": 2,
  "name": "Miniflux Checker Plus",
  "description": "Miniflux Checker with minor style customization options",
  "version": "1.4.0",

  "background": {
    "scripts": ["background.js"]
  },
 
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },

  "options_ui": {
    "browser_style": true,
    "page": "options.html"
  },

  "permissions": ["alarms", "<all_urls>", "notifications", "storage", "contextMenus"]
}
